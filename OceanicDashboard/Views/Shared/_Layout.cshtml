<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />    <title>@ViewData["Title"] - Oceanic Monitoring Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://d3js.org/d3.v7.min.js"></script>
    <style>
        .card-metric {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
        }
        .card-data {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
            border-radius: 15px;
        }
        .navbar-custom {
            background: linear-gradient(90deg, #2c3e50 0%, #3498db 100%);
        }
        .btn-ocean {
            background: linear-gradient(45deg, #1e3c72 0%, #2a5298 100%);
            border: none;
            color: white;
        }
        .btn-ocean:hover {
            background: linear-gradient(45deg, #2a5298 0%, #1e3c72 100%);
            color: white;
        }
        
        /* CSS para gráfico simples alternativo */
        .simple-chart {
            display: flex;
            align-items: end;
            height: 200px;
            gap: 5px;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 8px;
        }
        .chart-bar {
            flex: 1;
            background: linear-gradient(to top, #667eea, #764ba2);
            min-height: 10px;
            border-radius: 3px 3px 0 0;
            position: relative;
            transition: all 0.3s ease;
        }
        .chart-bar:hover {
            opacity: 0.8;
            transform: scale(1.05);
        }
        .chart-bar::after {
            content: attr(data-value);
            position: absolute;
            top: -25px;
            left: 50%;
            transform: translateX(-50%);
            font-size: 10px;
            font-weight: bold;
            color: #333;
        }
        .chart-legend {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 10px;
            font-size: 12px;
        }
        .legend-item {
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .legend-color {
            width: 12px;
            height: 12px;
            border-radius: 2px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark navbar-custom">
            <div class="container-fluid">
                <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">
                    🌊 Oceanic Monitor
                </a>
                <div class="navbar-nav">
                    <a class="nav-link" href="@Url.Action("Index", "Dashboard")">Dashboard</a>
                    <a class="nav-link" href="@Url.Action("Data", "Dashboard")">Dados</a>
                    <a class="nav-link" href="@Url.Action("Analyses", "Dashboard")">Análises</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
